<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>interior.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>interieur</object-name>
    <object-name>inttour</object-name>
    <object-name>planchet</object-name>
    <object-name>cabine</object-name>
    <object-name>intbaieGA</object-name>
    <object-name>intbaieGB</object-name>
    <object-name>intbaieDA</object-name>
    <object-name>intbaieDB</object-name>
    <object-name>sieges</object-name>

    <!-- Objets transparents -->
    <object-name>intvitres</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>intvitres</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>intvitres</object-name>
  </animation>

  <!-- Tableau de bord -->
  <model>
    <path>Aircraft/Br-761/Models/Interior/Panel/panel.xml</path>
    <offsets>
      <x-m> -13.538 </x-m>
      <y-m>   0.000 </y-m>
      <z-m>  -0.699 </z-m>
      <roll-deg>    0 </roll-deg>
      <pitch-deg>   0 </pitch-deg>
      <heading-deg> 0 </heading-deg>
    </offsets>
  </model>

  <!-- Pilote -->
  <model>
    <path>Aircraft/Br-761/Models/Pilot/pilot.xml</path>
    <offsets>
      <x-m> -12.907 </x-m>
      <y-m>  -0.482 </y-m>
      <z-m>  -0.611 </z-m>
      <roll-deg>    0 </roll-deg>
      <pitch-deg>   0 </pitch-deg>
      <heading-deg> 0 </heading-deg>
    </offsets>
  </model>

  <!-- Baie -->
  <animation>
    <type>rotate</type>
    <object-name>intbaieGA</object-name>
    <property>instrumentation/doors/crew/position-norm</property>
    <factor> -90 </factor>
    <axis>
     <x1-m>  3.518 </x1-m>
     <y1-m> -1.659 </y1-m>
     <z1-m> -0.635 </z1-m>
     <x2-m>  9.460 </x2-m>
     <y2-m> -1.082 </y2-m>
     <z2-m> -0.563 </z2-m>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>intbaieGB</object-name>
    <property>instrumentation/doors/crew/position-norm</property>
    <factor> -90 </factor>
    <axis>
     <x1-m>  9.460 </x1-m>
     <y1-m> -1.082 </y1-m>
     <z1-m> -0.563 </z1-m>
     <x2-m> 13.290 </x2-m>
     <y2-m> -0.316 </y2-m>
     <z2-m> -0.302 </z2-m>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>intbaieDA</object-name>
    <property>instrumentation/doors/crew/position-norm</property>
    <factor> 90 </factor>
    <axis>
     <x1-m>  3.518 </x1-m>
     <y1-m>  1.659 </y1-m>
     <z1-m> -0.635 </z1-m>
     <x2-m>  9.460 </x2-m>
     <y2-m>  1.082 </y2-m>
     <z2-m> -0.563 </z2-m>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>intbaieDB</object-name>
    <property>instrumentation/doors/crew/position-norm</property>
    <factor> 90 </factor>
    <axis>
     <x1-m>  9.460 </x1-m>
     <y1-m>  1.082 </y1-m>
     <z1-m> -0.563 </z1-m>
     <x2-m> 13.290 </x2-m>
     <y2-m>  0.316 </y2-m>
     <z2-m> -0.302 </z2-m>
    </axis>
  </animation>

</PropertyList>

